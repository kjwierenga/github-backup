#!/usr/bin/env ruby

require 'rubygems'
require 'octopi'

$:.unshift(File.join(File.dirname(__FILE__), '..', 'lib'))
require 'github-backup'

unless ARGV.length == 2
  puts "usage: github-backup <username> <local backup root>"
  exit 1
end

username = ARGV.shift
root     = ARGV.shift

backup = Github::Backup.new(username, root)
backup.execute
